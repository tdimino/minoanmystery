---
const currentYear = new Date().getFullYear();

const mainLinks = [
  { href: '/', label: 'Home' },
  { href: '/ai-llms', label: 'A.I./LLMs' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
  { href: '/blog', label: 'Blog' },
];

const caseStudies = [
  { href: '/portfolio/dolby', label: 'Dolby.com' },
  { href: '/portfolio/acs', label: 'The American College of Surgeons' },
  { href: '/portfolio/czi', label: 'Chan Zuckerberg Initiative' },
];

const socialLinks = [
  { href: 'https://twitter.com/DaktylIdaean', label: 'Twitter', icon: 'twitter' },
  { href: 'https://www.linkedin.com/in/tomdimino/', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://github.com/tdimino', label: 'GitHub', icon: 'github' },
  { href: 'https://instagram.com/tamademino', label: 'Instagram', icon: 'instagram' },
  { href: 'https://www.tomdimino.com/', label: 'Personal Site', icon: 'globe' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="Minoan Mystery Home">
          <img src="/images/footer-logo.png" alt="Minoan Mystery" class="footer-logo-img" />
        </a>
        <p class="footer-description">
          If you'd like to collaborate or ideate together, please feel free to connect by LinkedIn, email or <a href="/contact" class="footer-link-inline">inquire herein</a>.
        </p>
      </div>

      <div class="footer-column">
        <h4 class="footer-heading">Main</h4>
        <ul class="footer-links">
          {mainLinks.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-heading">Case studies</h4>
        <ul class="footer-links">
          {caseStudies.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        Copyright &copy; Al-Tamarru {currentYear}
      </p>
      <div class="footer-social">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            class="social-link"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
          >
            {link.icon === 'twitter' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/>
              </svg>
            )}
            {link.icon === 'linkedin' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
            )}
            {link.icon === 'github' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/>
                <path d="M9 18c-4.51 2-5-2-7-2"/>
              </svg>
            )}
            {link.icon === 'instagram' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
              </svg>
            )}
            {link.icon === 'globe' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"/>
                <line x1="2" y1="12" x2="22" y2="12"/>
                <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-background);
    padding: 100px 0 32px;
    margin-top: auto;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr;
    gap: var(--space-xl);
    padding-bottom: var(--space-xl);
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .footer-logo {
    display: inline-flex;
    width: 158px;
    height: 158px;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .footer-logo:hover {
    opacity: 0.8;
  }

  .footer-logo-img {
    width: 158px !important;
    height: 158px !important;
    max-width: 158px;
    object-fit: contain;
  }

  .footer-description {
    color: var(--color-text-muted);
    font-size: 0.9rem;
    line-height: 1.6;
    margin: 0;
    max-width: 280px;
  }

  .footer-link-inline {
    color: var(--color-text);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .footer-link-inline:hover {
    color: var(--color-primary);
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-heading {
    font-family: var(--font-heading);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 var(--space-xs) 0;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-link {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .copyright {
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin: 0;
  }

  .footer-social {
    display: flex;
    gap: var(--space-sm);
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .social-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--space-lg);
    }

    .footer-description {
      max-width: none;
    }

    .footer-bottom {
      flex-direction: column;
      gap: var(--space-md);
      text-align: center;
    }
  }
</style>
