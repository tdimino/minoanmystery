---
const currentYear = new Date().getFullYear();

const mainLinks = [
  { href: '/', label: 'Home' },
  { href: 'https://www.tomdimino.com/Cognitive-Designing-AI-LLMs.pdf', label: 'A.I./LLMs', external: true },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
  { href: 'https://tomdimino.substack.com/', label: 'Blog', external: true },
  { href: '/labyrinth', label: 'The Labyrinth' },
];

const caseStudies = [
  { href: '/portfolio/dolby', label: 'Dolby.com' },
  { href: '/portfolio/acs', label: 'The American College of Surgeons' },
  { href: '/portfolio/czi', label: 'Chan Zuckerberg Initiative' },
];

const socialLinks = [
  { href: 'https://www.tomdimino.com/', label: 'Personal Site', icon: 'tomdimino' },
  { href: 'https://twitter.com/DaktylIdaean', label: 'Twitter', icon: 'twitter' },
  { href: 'https://www.linkedin.com/in/tomdimino/', label: 'LinkedIn', icon: 'linkedin' },
  { href: 'https://github.com/tdimino', label: 'GitHub', icon: 'github' },
  { href: 'https://instagram.com/tamademino', label: 'Instagram', icon: 'instagram' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="Minoan Mystery Home">
          <img src="/images/footer-logo.png" alt="Minoan Mystery" class="footer-logo-img" />
        </a>
        <p class="footer-description">
          If you'd like to collaborate or ideate together, please feel free to connect by LinkedIn, email or <a href="/contact" class="footer-link-inline">inquire herein</a>.
        </p>
      </div>

      <div class="footer-column">
        <h4 class="footer-heading">Main</h4>
        <ul class="footer-links">
          {mainLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="footer-link"
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >{link.label}</a>
            </li>
          ))}
        </ul>
      </div>

      <div class="footer-column">
        <h4 class="footer-heading">Case studies</h4>
        <ul class="footer-links">
          {caseStudies.map((link) => (
            <li>
              <a href={link.href} class="footer-link">{link.label}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">
        Copyright &copy; Al-Tamarru {currentYear}
      </p>
      <div class="footer-social">
        {socialLinks.map((link) => (
          <a
            href={link.href}
            class="social-link"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={link.label}
          >
            {link.icon === 'twitter' && (
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
