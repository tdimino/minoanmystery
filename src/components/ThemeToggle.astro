---
/**
 * ThemeToggle - Soul-aware theme toggle
 *
 * Soul Pattern: Perceive click → Update memory → Dispatch theme change
 *
 * Features:
 * - Sun/Moon icon transition
 * - Keyboard shortcut: Cmd+Shift+D / Ctrl+Shift+D
 * - Works with View Transitions (astro:after-swap)
 */
---

<button
  class="theme-toggle"
  aria-label="Toggle dark mode"
  title="Toggle theme (Cmd+Shift+D)"
>
  <!-- Sun icon (shown in dark mode - click to go light) -->
  <span class="theme-icon theme-icon--sun">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="5"></circle>
      <line x1="12" y1="1" x2="12" y2="3"></line>
      <line x1="12" y1="21" x2="12" y2="23"></line>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
      <line x1="1" y1="12" x2="3" y2="12"></line>
      <line x1="21" y1="12" x2="23" y2="12"></line>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
  </span>

  <!-- Moon icon (shown in light mode - click to go dark) -->
  <span class="theme-icon theme-icon--moon">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
  </span>
</button>

<style>
  .theme-toggle {
    position: relative;
    width: 44px;
    height: 44px;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, border-color 0.3s ease, background-color 0.3s ease;
    color: var(--color-text);
  }

  .theme-toggle:hover {
    border-color: var(--color-primary);
    transform: scale(1.05);
  }

  .theme-toggle:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  .theme-icon {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  /* Default: show moon (light mode, waiting to go dark) */
  .theme-icon--sun {
    opacity: 0;
    transform: rotate(90deg) scale(0.8);
  }

  .theme-icon--moon {
    opacity: 1;
    transform: rotate(0) scale(1);
  }

  /* Dark mode: show sun (waiting to go light) */
  :global([data-theme="dark"]) .theme-icon--sun {
    opacity: 1;
    transform: rotate(0) scale(1);
  }

  :global([data-theme="dark"]) .theme-icon--moon {
    opacity: 0;
    transform: rotate(-90deg) scale(0.8);
  }

  /* Mobile adjustments - maintain 44px touch target */
  @media (max-width: 767px) {
    .theme-toggle {
      /* Keep 44px for WCAG 2.2 / Apple HIG touch target */
      width: 44px;
      height: 44px;
    }

    .theme-toggle svg {
      width: 18px;
      height: 18px;
    }
  }

  /* Touch feedback */
  .theme-toggle:active {
    transform: scale(0.95);
  }
</style>

<script>
  /**
   * ThemeToggle Controller
   *
   * Handles theme switching with proper View Transition cleanup.
   * Uses data attribute tracking to prevent duplicate click handlers
   * and tracks the keydown listener for cleanup.
   */
  (function() {
    let keydownHandler: ((e: KeyboardEvent) => void) | null = null;
    let initialized = false;

    function toggleTheme() {
      const current = document.documentElement.getAttribute('data-theme') || 'light';
      const next = current === 'dark' ? 'light' : 'dark';
      document.documentElement.setAttribute('data-theme', next);
      localStorage.setItem('theme', next);
    }

    function initThemeToggles() {
      // Prevent multiple initializations of the keydown handler
      if (!initialized) {
        initialized = true;

        // Keyboard shortcut: Cmd+Shift+D / Ctrl+Shift+D (tracked for cleanup)
        keydownHandler = (e: KeyboardEvent) => {
          if ((e.metaKey || e.ctrlKey) && e.shiftKey && e.key.toLowerCase() === 'd') {
            e.preventDefault();
            toggleTheme();
          }
        };
        document.addEventListener('keydown', keydownHandler);
      }

      // Use data attribute to track initialized toggle buttons
      // (prevents duplicate click handlers on new elements)
      document.querySelectorAll('.theme-toggle').forEach((toggle) => {
        if (!toggle.hasAttribute('data-theme-initialized')) {
          toggle.setAttribute('data-theme-initialized', 'true');
          toggle.addEventListener('click', toggleTheme);
        }
      });
    }

    function cleanupThemeToggles() {
      // Remove keydown listener
      if (keydownHandler) {
        document.removeEventListener('keydown', keydownHandler);
        keydownHandler = null;
      }
      initialized = false;

      // Note: Click handlers on toggle buttons will be cleaned up when
      // elements are replaced during View Transitions
    }

    // Initialize
    initThemeToggles();

    // Cleanup before View Transition swap
    document.addEventListener('astro:before-swap', cleanupThemeToggles);

    // Re-initialize after View Transitions
    document.addEventListener('astro:after-swap', initThemeToggles);
  })();
</script>
